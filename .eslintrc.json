{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "eslint:recommended"
    ],
  "rules": {
    "quotes": [1, "single", "avoid-escape"],
    "no-console": 0,
    "no-alert": 0,
    "no-unused-vars": 1,
    "semi": 2,
    "modules": 0,
    "jsx": 0
    },
  "plugins": [],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
      "$": false
  }
}
